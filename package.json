{
    "name": "dwarf-core",
    "version": "1.0.0",
    "description": "core of Dwarf",
    "main": "src/index.ts",
    "types": "src/api.d.ts",
    "license": "GPL-3.0-or-later",
    "repository": {
        "type": "git",
        "url": "git://github.com/iGio90/DwarfCore.git"
    },
    "scripts": {
        "prepare": "python3 ./change_theme_fontsize.py && npm run build",
        "build": "npm run build_core && npm run build_docs && npm run build_types",
        "build_core": "frida-compile --no-sourcemap ./src/index.ts -o ./dist/core.js && python3 ./place_dwarf_license.py && python3 ./generate_dwarf_api.py && npm run copy",
        "build_docs": "typedoc --options typedoc.json",
        "build_types": "tsc -d --removeComments false --declarationDir ./dwarf-typings --emitDeclarationOnly",
        "watch": "frida-compile --no-sourcemap ./src/index.ts -o ./dist/core.js -w",
        "copy": "cp ./dist/core.js ../Dwarf/dwarf_debugger/core/scripts/core.js"
    },
    "devDependencies": {
        "@types/frida-gum": "^14.2.2",
        "@types/node": "^12.12.14",
        "eledoc": "^0.2.1",
        "frida-compile": "^9.0.8",
        "typedoc": "^0.15.3",
        "typescript": "^3.7.2"
    }
}