{
    "name": "dwarf-core",
    "version": "1.0.0",
    "description": "core of Dwarf",
    "main": "src/index.ts",
    "types": "src/api.d.ts",
    "license": "GPL-3.0-or-later",
    "repository": {
        "type": "git",
        "url": "git://github.com/iGio90/DwarfCore.git"
    },
    "scripts": {
        "prepare": "npm run build",
        "build": "npm run build_core && npm run build_docs && npm run build_types",
        "build_core": "npm run tslint && frida-compile --no-sourcemap ./src/index.ts -o ./dist/core.js && python3 ./place_dwarf_license.py && python3 ./generate_dwarf_api.py && npm run copy",
        "build_docs": "typedoc && npm run deploy_docs",
        "build_types": "tsc -d --removeComments false --declarationDir ./dwarf-typings --emitDeclarationOnly",
        "watch": "frida-compile --no-sourcemap ./src/index.ts -o ./dist/core.js -w",
        "copy": "cp ./dist/core.js ../Dwarf/dwarf_debugger/core/scripts/core.js",
        "tslint": "tslint --project tsconfig.json",
        "deploy_docs": "gh-pages -d ./dist/docs"
    },
    "devDependencies": {
        "@types/frida-gum": "^16.4.1",
        "@types/node": "^14.14.31",
        "frida-compile": "^10.0.0",
        "gh-pages": "^3.1.0",
        "tslint": "^6.1.3",
        "typedoc": "^0.20.28",
        "typescript": "^4.1.5",
        "typescript-tslint-plugin": "^1.0.1"
    }
}
