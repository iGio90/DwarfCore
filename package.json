{
    "name": "dwarf-core",
    "version": "2.0.0",
    "description": "core of Dwarf",
    "main": "src/index.ts",
    "types": "dwarf-typings/api.d.ts",
    "license": "GPL-3.0-or-later",
    "repository": {
        "type": "git",
        "url": "git://github.com/iGio90/DwarfCore.git"
    },
    "engines": {
        "node": ">=14.16.0"
    },
    "scripts": {
        "prepare": "npm run build",
        "build": "npm run build_core && npm run build_docs && npm run build_types",
        "build_dev": "npm run build_core_dev && npm run build_docs_dev && npm run build_types",
        "build_core": "rm -r ./dist && npm run tslint && frida-compile --no-sourcemap ./src/index.ts -o ./dist/core.tmp.js && npm run build:place_license",
        "build_core_dev": "npm run tslint && frida-compile --no-sourcemap ./src/index.ts -o ./dist/core.js && python3 ./place_dwarf_license.py && npm run copy",
        "build_docs": "typedoc",
        "build_docs_dev": "typedoc && npm run deploy_docs",
        "build:place_license": "cat ./src/license.tpl ./dist/core.tmp.js | sed \"s/{YEAR}/$(date '+%Y')/g; s/{VERSION}/$(node -p \"require('./package.json').version\")/g\" > ./dist/core.js && rm ./dist/core.tmp.js",
        "build_types": "tsc -d --removeComments false --declarationDir ./dwarf-typings --emitDeclarationOnly",
        "watch_dev": "frida-compile --no-sourcemap ./src/index.ts -o ./dist/core.js -w",
        "copy": "cp ./dist/core.js ../Dwarf/assets/corejs/core.js && cp ./src/types/CoreResponses.ts ../Dwarf/src/core/types/CoreJSResponses.ts",
        "tslint": "tslint --project tsconfig.json",
        "deploy_docs": "gh-pages -d ./dist/docs",
        "create_py_api": "node createpyapi.js"
    },
    "devDependencies": {
        "@types/frida-gum": "^16.4.1",
        "@types/node": "^14.14.35",
        "frida-compile": "^10.1.0",
        "gh-pages": "^3.1.0",
        "tslint": "^6.1.3",
        "typedoc": "^0.20.33",
        "typescript": "^4.2.3",
        "typescript-tslint-plugin": "^1.0.1"
    }
}
